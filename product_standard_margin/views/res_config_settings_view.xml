<odoo>
    <!-- res.config.settings inherit form view -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_purchase_tax_id']/../../../../.." position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="margin_tax"/>
                        <div class="text-muted">
                            Indicates if the taxes to calculate the margin are included or excluded
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Margin Tax" for="margin_tax" class="col-md-3 o_light_label"/>
                                <field name="margin_tax"/>
                            </div>
                        </div>
                    </div>
                </div>
        </xpath>
    </field>
</record>
</odoo>